<Page x:Class="Dungeon.MainPages.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dungeon.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация игрока">

    <Grid>
        <StackPanel Orientation="Horizontal">

            <Button
                Name="BtnLogin"
                Click="BtnLogin_Click"
                Width="120"
                Height="40"
                Content="Войти"
                />
            <Button
                Name="BtnReg"
                Click="BtnReg_Click"
                Width="120"
                Height="40"
                Content="Регистрация"
                />
        </StackPanel>

        <StackPanel>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox
                Name="TxbLogin"
                Width="150"
                Margin="0 20"/>
            <PasswordBox
                Name="PsbPassword"/>
        </StackPanel>

        <StackPanel>
            <TextBlock
             Text="Введите логин:"
             />
            <TextBlock
             Text="Введите пароль:"
             />
        </StackPanel>
    </Grid>
</Page>
